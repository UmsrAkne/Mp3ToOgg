<Window
    x:Class="Mp3ToOgg.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:m="clr-namespace:Mp3ToOgg.Models"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowDrop="True">

    <i:Interaction.Behaviors>
        <m:DropBehavior />
    </i:Interaction.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ListView Grid.Row="1" ItemsSource="{Binding Mp3Files}">
            <ListView.ItemTemplate>

                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Name}" />
                        <TextBlock Grid.Column="1" Text="未変換" />
                    </Grid>
                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>

        <Border Grid.Row="2">
            <Button
                Width="150"
                Margin="5"
                HorizontalAlignment="Right"
                Command="{Binding StartConvertCommand}"
                Content="変換"
                IsEnabled="{Binding CanConvert}" />
        </Border>

        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
